<div>
    <h2>All drinks are shown here.</h2>
</div>

<h2>@Model.CurrentCategory</h2>

<div class="container">
    <div class="row">
        @foreach (var drink in Model.Drinks)
        {
            <div class="col-sm-4 col-lg-4 col-md-4 align">
                <div class="img-thumbnail">
                    <img src="@drink.ImageThumbnailUrl" alt="" class="img-fluid" />
                    <div class="figure-caption">
                        <h3 class="pull-right">@drink.Price.ToString("c")</h3>
                        <h3>
                            <a>@drink.Name</a>
                        </h3>
                        <p>@drink.ShortDescription</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>